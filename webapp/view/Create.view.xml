<mvc:View
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:main="sap.ui.webc.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Panel width="auto" height="100%" class="sapUiResponsiveMargin" accessibleRole="Region">
        <headerToolbar>
            <OverflowToolbar>
                <Title text="Edit Item"/>
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <FlexBox height="100%" alignItems="Center" justifyContent="Center">
                <l:VerticalLayout class="sapUiContentPadding">
                    <Label text="Product Name"/>
                    <Input value="{ItemDetails>ItemName}" valueLiveUpdate="true" width="400px"/>
                    
                    <Label text="Product ID"/>
                    <Input value="{ItemDetails>ItemCode}" valueLiveUpdate="true" width="400px"/>

                    <Label text="Price"/>
                    <Input value="{ItemDetails>Price}" valueLiveUpdate="true" width="400px"/>

                    <Label text="Supplier"/>
                    <Input value="{ItemDetails>BarCode}" valueLiveUpdate="true" width="400px"/>

                    <Label text="Description"/>
                    <Input value="{ItemDetails>ForeignName}" valueLiveUpdate="true" width="400px"/>

                    <FlexBox alignItems="End" justifyContent="End">
                        <l:HorizontalLayout class="sapUiContentPadding" width="100%">
                            <l:content>
                                <Button text="Cancel" press="onCancel" type="Emphasized"></Button>
                                <Button text="Save" press="onSubmit" type="Emphasized"></Button>
                            </l:content>
                        </l:HorizontalLayout>
                    </FlexBox>
                </l:VerticalLayout>
            </FlexBox>
        </content>
    </Panel>
</mvc:View>