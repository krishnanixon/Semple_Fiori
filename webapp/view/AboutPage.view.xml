<mvc:View
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
     xmlns:main="sap.ui.webc.main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
		<Panel width="auto" height="100%" class="sapUiResponsiveMargin" accessibleRole="Region">
		    <headerToolbar>
			    <OverflowToolbar> <Title text="Add Items"/> </OverflowToolbar>
		    </headerToolbar>
		<content>
            <FlexBox height="100%" alignItems="Center" justifyContent="Center">

			<l:VerticalLayout class="sapUiContentPadding">

			        <Label text="Product Name"/>
			        <Input value="{/productName}" valueLiveUpdate="true" width="400px" enabled="{/enabled}"/>
                    
			        <Label text="Product ID"/>
			        <Input value="{/Product ID}" valueLiveUpdate="true" width="400px" enabled="{/enabled}"/>

                    <Label text="Price"/>
			        <Input value="{/Price}"  valueLiveUpdate="true" width="400px" enabled="{/enabled}"/>

                    <Label text="Supplier"/>
			        <Input value="{/Supplier}"  valueLiveUpdate="true" width="400px" enabled="{/enabled}"/>

                    <Label text="Description"/>
			        <Input value="{/Description}"  valueLiveUpdate="true" width="400px" enabled="{/enabled}"/>

                   	<FlexBox
				alignItems="End"
				justifyContent="End">
                        <l:HorizontalLayout class="sapUiContentPadding"  width="100%">
                        <l:content>
                            <Button text="Cancel" click="handleClick" design="Negative"></Button>
                            <Button text="Save" click="handleClick" design="Emphasized"></Button> </l:content>
                        </l:HorizontalLayout>
                    </FlexBox>
	            </l:VerticalLayout>
            </FlexBox>
		</content>
	</Panel>

</mvc:View>
